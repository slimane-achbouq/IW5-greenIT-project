{% extends "dashboard/base.html.twig" %}

{% block body %}
    <div class="table w-full p-2">
        <table class="w-full border">
            <thead>
            <tr class="bg-gray-50 border-b">
                <th class="p-2 border-r cursor-pointer text-sm font-thin text-gray-500">
                    <div class="flex items-center justify-center">
                        ID
                    </div>
                </th>
                <th class="p-2 border-r cursor-pointer text-sm font-thin text-gray-500">
                    <div class="flex items-center justify-center">
                        Model
                    </div>
                </th>
                <th class="p-2 border-r cursor-pointer text-sm font-thin text-gray-500">
                    <div class="flex items-center justify-center">
                        Image preview
                    </div>
                </th>
                <th class="p-2 border-r cursor-pointer text-sm font-thin text-gray-500">
                    <div class="flex items-center justify-center">
                        Action
                    </div>
                </th>
            </tr>
            </thead>
            <tbody>
            {% for car in cars %}
                <tr class="bg-gray-100 text-center border-b text-sm text-gray-600">
                    <td class="p-2 border-r">{{ car.id }}</td>
                    <td class="p-2 border-r">{{ car.title }}</td>
                    <td align="center" class="p-2 border-r">
                        <img width="250px" src="{{ asset('upload/cars/' ~  car.image ) }}">
                    </td>
                    <td>
                        <a href="{{ path('app_delete_car', {id: car.id}) }}" class="bg-red-500 p-2 text-black hover:shadow-lg text-xs font-thin">Remove</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}